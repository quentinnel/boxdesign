<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<update handle="customer_account" />
	<body>
		<referenceBlock name="head.components">
			<block class="Magento\Framework\View\Element\Js\Components"
				name="windcave_cards_head_components" template="Windcave_Payments::js/components.phtml" />
		</referenceBlock>
		<referenceContainer name="content">
			<block class="Windcave\Payments\Block\Customer\Cards" name="windcave_cards"
				template="customer/cards.phtml" cacheable="false" />
		</referenceContainer>
	</body>
</page>